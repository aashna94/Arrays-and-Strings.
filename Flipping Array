#include <iostream>
#include <vector>
#include <queue>
#include <unordered_set>
#include <string>
#include <climits>
#include <cassert>
#include <map>
#include <set>

using namespace std;

void maxSubarray(int *ar, int n)
{
    map<int, int> m;
    int i,val,cur=0,diff=0,zero=0;
    for (i=0; i<n ; i++)
    {
        if(ar[i]==0)
            zero++;
        val=(ar[i]==0)?-1:1;
        cur=max(val, val+cur);
        diff=max(diff, cur);
    }
    diff=max(0, diff);
    cout<<zero+diff;
}

int main(int argc, const char * argv[])
{
   
    int i,n,ele;
    cin>>n;
    int* ar=new int[n-2];
    for (i=0; i<n-2; i++)
    {
        cin>>ar[i];
    }
    maxSubarray(ar, n);
    return 0;
}















