#include <list>
#include <set>
#include <math.h>

using namespace std;

void countSubarray(int *ar, int n)
{
    int i,cnt=0,len=1;
    for (i=0; i<n ; i++)
    {
        if(ar[i+1]>ar[i])
        {
            cnt+=len;
            len++;
        }
        else
            len=1;
    }
    cout<<cnt;
}


int main(int argc, const char * argv[])
{
    
    int i,n,ele;
    cin>>n;
    int *ar=new int[n];
    for (i=0; i<n; i++)
    {
        cin>>ar[i];
    }
    countSubarray(ar, n);
    return 0;
}


